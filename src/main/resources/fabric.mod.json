{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "Bring back the classic crafting table window icon of Minecraft",
  "authors": [
    "Fallen_Breath"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/",
    "sources": "https://github.com/Fallen-Breath/classic-minecraft-icon"
  },

  "icon": "assets/classicminecrafticon/mod_icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "me.fallenbreath.classicminecrafticon.ClassicMinecraftIconMod"
    ]
  },
  "mixins": [
    "classic-minecraft-icon.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.4",
    "minecraft": "${minecraft_dependency}"
  }
}
